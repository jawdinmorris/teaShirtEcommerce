<p id="notice"><%= notice %></p>

<h1>Carts</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Sub Total</th>
      <th>GST</th>
      <th>Total</th>
      <th colspan="6"></th>
    </tr>
  </thead>
<% if @carts != nil  %>
  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.item.name %></td>
        <td><%= cart.item.price %></td>
        <td><%= cart.quantity %></td>
        <td><%= cart.quantity * cart.item.price %></td>
        <td><%= cart.quantity * cart.item.price * 0.1 %></td>
        <td><%= cart.quantity * cart.item.price + (0.1 * cart.quantity * cart.item.price) %></td>
        <td><%= link_to 'Delete', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 <% end %>
<br>

<%= link_to 'New Cart', new_cart_path %>
