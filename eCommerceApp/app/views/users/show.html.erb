<div class = "container">
<h1> <%= @user.first_name %> <%= @user.last_name %> <h1>
<h2> Contact </h2>
<ul>
<li><%= @user.email %></li>
<li><%= @user.address %></li>
</ul>





<%= link_to 'Edit Profile', edit_user_registration_path, class: "nav-link" if current_user ==  @user %>

<%= button_to "Delete Account Forever", registration_path(:user), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></div>

<h2>User's cart</h2>
<%= render 'user_cart', user: @user %>
