
<div class = "profiles">
<h1> <%= @user.first_name %> <%= @user.last_name %> <h1>
<h2> Contact </h2>

<ul, list-style: "none">
<li><%= @user.email %></li>
<li><%= @user.address %></li>
</ul>

</div>



<%= link_to 'Edit Profile', edit_user_registration_path, class: "nav-link" if current_user ==  @user %>

<% if current_user.admin == true %>
<%= button_to "Delete Account Forever", registration_path(:user), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %>
<h2>User's cart</h2>
<%= render 'user_cart', user: @user %>
<% end %>
